generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model WebsiteRow {
  id               Int      @id @default(autoincrement())
  domain           String   @unique
  name             String
  service_name     String
  address          String
  phone            String
  email            String
  site_title       String
  meta_title       String
  meta_description String
  logo             String
  hero_image       String
  gallery_1        String
  gallery_2        String
  build            String   // Enum: unavailable | processing | complete | failed
  deployed         String   // Enum: unavailable | processing | complete | failed
  log              String   // '---' or string
}
