---
import MainLayout from "../layouts/MainLayout.astro";
import SectionTitle from "../components/ui/SectionTitle.astro";
import Card from "../components/ui/Card.astro";
import ServiceCard from "../components/ui/ServiceCard.astro";
import { Image } from "astro:assets";

import c1 from "../assets/pics/card-pic1.png";
import c2 from "../assets/pics/card-pic2.png";
import c3 from "../assets/pics/card-pic3.png";
import c4 from "../assets/pics/card-pic4.png";
import c5 from "../assets/pics/card-pic5.png";
import c6 from "../assets/pics/card-pic6.png";

// Definici√≥n detallada de cada servicio
const services = [
  {
    index: 1,
    titleTop: "[[Search|Find]] Engine",
    titleBottom: "Optimization",
    img: c1,
    alt: "SEO",
    description: "[[We optimize your website|We improve your site]] to rank [[higher|better]] in search engine results pages, [[driving|bringing]] more organic traffic to your site. Our SEO services include [[keyword research|keyword analysis]], [[on-page optimization|site optimization]], [[technical SEO|technical improvements]], and [[link building strategies|backlink strategies]].",
    benefits: [
      "[[Increased|Boosted]] organic traffic",
      "[[Higher|Improved]] website rankings",
      "[[Better|Enhanced]] user experience",
      "[[Increased|Greater]] brand visibility"
    ],
    cta: "[[Get SEO Audit|Request SEO Review]]",
    link: "/services/seo",
  },
  {
    index: 2,
    titleTop: "Pay-per-click",
    titleBottom: "[[advertising|marketing]]",
    img: c2,
    alt: "PPC",
    description: "Our PPC services [[help you maximize your advertising budget|make the most of your ad spend]] by [[creating|building]] targeted campaigns that [[reach|connect with]] the right audience at the right time. We [[manage|handle]] campaigns across [[Google Ads|Google advertising]], [[Bing Ads|Bing advertising]], and [[social media platforms|social channels]].",
    benefits: [
      "[[Immediate|Instant]] website traffic",
      "[[Highly targeted|Precisely targeted]] advertising",
      "[[Measurable|Trackable]] ROI",
      "[[Flexible|Customizable]] budgeting options"
    ],
    cta: "[[Start PPC Campaign|Launch PPC Ads]]",
    link: "/services/ppc",
  },
  {
    index: 3,
    titleTop: "Social Media",
    titleBottom: "[[Marketing|Engagement]]",
    img: c3,
    alt: "Social Media Marketing",
    description: "We [[help you build|assist in building]] and [[engage with|connect with]] your audience across [[various|multiple]] social media platforms. Our services include [[content creation|social content production]], [[community management|audience management]], [[paid social advertising|sponsored posts]], and [[performance analytics|social analytics]].",
    benefits: [
      "[[Increased|Boosted]] brand awareness",
      "[[Better|Improved]] customer engagement",
      "[[Higher|Greater]] conversion rates",
      "[[Audience insights|Social audience insights]]"
    ],
    cta: "[[Social Media Strategy|Get Social Plan]]",
    link: "/services/social-media",
  },
  {
    index: 1,
    titleTop: "Email",
    titleBottom: "Marketing",
    img: c4,
    alt: "Email Marketing",
    description: "Our email marketing services [[help you nurture leads|support lead nurturing]] and [[maintain customer relationships|build customer loyalty]] through [[personalized campaigns|custom email campaigns]]. We [[handle everything|manage all aspects]] from [[strategy development|campaign planning]] to [[design|creative design]], [[automation|workflow automation]], and [[performance analysis|results tracking]].",
    benefits: [
      "[[Direct|Personal]] customer communication",
      "[[High|Excellent]] ROI",
      "[[Personalized|Tailored]] messaging",
      "[[Automated|Streamlined]] workflows"
    ],
    cta: "[[Start Email Campaign|Launch Email Marketing]]",
    link: "/services/email-marketing",
  },
  {
    index: 2,
    titleTop: "Content",
    titleBottom: "Creation",
    img: c5,
    alt: "Content Creation",
    description: "We [[create|produce]] [[high-quality|premium]], [[engaging|compelling]] content that [[resonates with|connects with]] your target audience and [[helps achieve|supports]] your business goals. Our content services include [[blog posts|blog articles]], [[articles|written content]], [[ebooks|digital books]], [[infographics|visual content]], [[videos|video production]], and more.",
    benefits: [
      "[[Increased|Boosted]] audience engagement",
      "[[Improved|Enhanced]] brand authority",
      "[[Better|Greater]] search visibility",
      "[[Valuable|Useful]] marketing assets"
    ],
    cta: "[[Content Strategy|Request Content Plan]]",
    link: "/services/content",
  },
  {
    index: 3,
    titleTop: "Analytics and",
    titleBottom: "Tracking",
    img: c6,
    alt: "Analytics",
    description: "We [[help you make data-driven decisions|enable data-based choices]] by [[setting up|implementing]] comprehensive tracking systems and [[providing actionable insights|delivering useful analytics]]. Our services include [[setting up analytics tools|analytics tool setup]], [[custom dashboards|dashboard creation]], [[conversion tracking|goal tracking]], and [[regular reporting|scheduled reports]].",
    benefits: [
      "[[Data-driven|Insightful]] decision making",
      "[[Performance|Results]] tracking",
      "[[User behavior|Visitor behavior]] insights",
      "[[ROI|Return on investment]] measurement"
    ],
    cta: "[[Analytics Setup|Get Analytics Installed]]",
    link: "/services/analytics",
  },
];
---

<MainLayout 
  title="Our Services | Positivus" 
  description="Explore our comprehensive range of digital marketing services including SEO, PPC, social media marketing, email marketing, content creation, and analytics."
>
  <div class="py-16 px-4 mx-auto max-w-screen-xl lg:py-24 lg:px-6">
    <div class="text-center mb-16">
      <h1 class="mb-4 text-5xl font-medium leading-none tracking-tight md:text-6xl">[[Our Services|What We Offer]]</h1>
      <p class="text-xl font-normal leading-7 mx-auto max-w-3xl">
        At Positivus, we [[offer|provide]] a [[comprehensive|wide-ranging]] [[range|selection]] of digital marketing services [[designed to help your business thrive|to boost your business success]] in the online world. [[Explore|Discover]] our services below to [[find|choose]] the [[perfect|ideal]] solution for your needs.
      </p>
    </div>
    
    <div class="space-y-24">
      {services.map((service, index) => (
        <div class="service-item">
          <div class="mb-12">
            <ServiceCard
              index={service.index}
              titleTop={service.titleTop}
              titleBottom={service.titleBottom}
              img={service.img}
              alt={service.alt}
              link={service.link}
            />
          </div>
          
          <div class="grid md:grid-cols-2 gap-10 px-4">
            <div>
              <h3 class="text-2xl font-medium mb-4">What we offer</h3>
              <p class="mb-6">{service.description}</p>
              <a href={service.link} class="inline-flex items-center px-8 py-4 bg-green text-dark rounded-2xl hover:bg-dark hover:text-white transition-all font-medium">
                {service.cta}
                <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </a>
            </div>
            
            <div class="bg-gray rounded-2xl p-8">
              <h3 class="text-2xl font-medium mb-4">Benefits</h3>
              <ul class="space-y-4">
                {service.benefits.map(benefit => (
                  <li class="flex items-start">
                    <svg class="mr-2 w-5 h-5 mt-1 text-green" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    <span>{benefit}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-24 text-center">
      <Card>
        <div class="p-10 md:p-16">
            <h2 class="text-3xl md:text-4xl font-medium mb-6">[[Ready to transform your digital presence?|Ready to elevate your online presence?]]</h2>
            <p class="mb-10 text-xl max-w-2xl mx-auto">
            [[Contact us today|Reach out now]] to [[discuss your digital marketing needs|talk about your online goals]] and [[discover how our services can help your business grow and succeed online|see how we can help your business thrive online]].
            </p>
            <a href="/contact" class="inline-flex items-center px-10 py-5 bg-dark text-white rounded-2xl hover:bg-green hover:text-dark transition-all font-medium text-xl">
            [[Get in touch|Contact us]]
            </a>
        </div>
      </Card>
    </div>
  </div>
</MainLayout>

<style>
  .service-item:nth-child(even) {
    @apply bg-gray bg-opacity-20 py-16 -mx-4 px-4;
  }
  
  @media (min-width: 768px) {
    .service-item:nth-child(even) {
      @apply -mx-6 px-6;
    }
  }
</style>
