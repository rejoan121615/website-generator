---
import { Image } from "astro:assets";
import Card from "../ui/Card.astro";
import Section from "./Section.astro";

const cards = [
  {
    index: 0,
    title: "{Completed|Finished} a full electrical rewiring for a {local|nearby} restaurant, improving safety and reducing energy costs by {30%|a third}.",
    link: "#",
  },
  {
    index: 1,
    title: "{Installed|Set up} a modern lighting system for a {commercial|business} office, enhancing workspace brightness and lowering monthly bills.",
    link: "#",
  },
  {
    index: 2,
    title: "{Provided|Delivered} 24/7 emergency repair for a residential building, restoring power within hours and preventing further damage.",
    link: "#",
  },
];


import larrow from "../../assets/icon3.svg";
import SectionTitle from "../ui/SectionTitle.astro";
---

<Section id="cases">
  <SectionTitle
    sectionTitle="Case Studies"
    description = "Discover real-life examples of our trusted electrical work, showcasing successful installations, repairs, and emergency solutions weâ€™ve delivered for homes and businesses."
    />
  <div class="flex flex-col lg:flex-row justify-between rounded-[45px] p-1">
    {
      cards.map((card) => (
        <Card>
          <div class="flex p-[60px] h-full bg-dark text-gray rounded-[45px] m-[1px]">
            <div class="flex flex-col gap-5">
              <p>{card.title}</p>
              <a href={card.link} class="flex items-center gap-[15px]">
                <span class="text-green">Case Info</span>
                <picture>
                  <Image src={larrow} alt="Arrow pointing up right" />
                </picture>
              </a>
            </div>
          </div>
        </Card>
      ))
    }
  </div>
</Section>
