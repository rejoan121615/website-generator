---
import { Image } from "astro:assets";
import Card from "../ui/Card.astro";
import Section from "./Section.astro";
import c7 from "../../assets/pics/Electrician-1.webp";

import propImg from "../../assets/pics/proposal-pic.png";

const title = "[[Croydon Electricians|Local Electrical Experts]]";
const description = "[[Our electricians|Our certified electricians|Our expert electricians]] are available [[24 hours a day, 7 days a week|around the clock|day and night]] to handle [[any situation|all emergencies|any electrical issue]], including [[electrical test inspections|electrical safety checks|inspection services]], [[diagnostics|fault finding|troubleshooting]], [[fault identification|problem detection|issue identification]], and more. They are [[completely certified|fully qualified|highly trained]] to perform [[all forms of domestic and commercial electrical work|any type of electrical work|residential and commercial services]], from [[a new plug outlet|installing a new socket|adding a power outlet]] to [[a complete or partial rewiring of your home|full or partial home rewiring|rewiring projects]], in a [[professional and timely manner|prompt and professional way|efficient manner]]. Any electrical work on your home must be done by a [[licensed electrician|qualified electrician|certified professional]]. To satisfy [[installation and safety laws|regulations and safety standards|legal and safety requirements]], all CR9 Electrician Croydon electricians are [[NICEIC approved|NICEIC certified|NICEIC registered]] and work to [[British Standard BS 7671|the latest British standards|BS 7671 regulations]]. Our electricians make every effort to [[cause the least amount of interruption possible|minimize disruption|avoid inconvenience]] and to leave your property [[clean and tidy|neat and clean|spotless]] after their visit.";

const additionalContent = {
  heading: "[[Electrical Installation|Professional Electrical]] Service",
  paragraph: "Our Electricians are [[qualified|certified]] to install many kinds of electrical installations such as",
  items: [
    "Electrical Relocations",
    "Data Center Electrics",
    "Electrical Generator Installations",
    "Audio and Visual",
    "Data Cabling",
    "PON Networks",
    "Electric Cooker Installation",
    "Lights and Switches",
  ],
};
---

<Section>
  <Card>
    <div
      class="flex bg-[#F3F3F3] rounded-[45px] p-[60px] relative mt-[123px] mb-[100px]"
    >
      <div class="w-full md:w-[100%] flex flex-col gap-[26px]">
        <h1 class="text-4xl font-bold">{title}</h1>
        <p>
          {description}
        </p>
        <button class="btn-primary md:w-[20%]">Call us now</button>
      </div>
    </div>
  </Card>
  <Card>
    <div class="p-8 md:p-12 grid md:grid-cols-2 gap-12 items-center">
      <div class="rounded-2xl p-8">
        <Image
          src={c7}
          alt={"alt"}
          class="h-[300px] w-auto sm:h-auto sm:w-4/4 object-cover"
        />
      </div>
      <div>
        <h2 class="text-3xl font-medium mb-6">
          {additionalContent.heading}
        </h2>
        <p class="mb-6">
          {additionalContent.paragraph}
        </p>
        <ul class="space-y-3 mb-8">
          {additionalContent.items.map((item) => (
            <li class="flex items-start">
              <svg
                class="mr-2 w-5 h-5 mt-1 text-[#f47629]"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"
                ></path>
              </svg>
              <span>{item}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </Card>
</Section>
