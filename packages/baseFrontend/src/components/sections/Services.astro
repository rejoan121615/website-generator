const cards = [
  {
    index: 1,
    titleTop: "[[Ceiling|Overhead]] Fan",
    titleBottom: "[[Installation|Setup]]",
    img: [[CookerInstallation|CookerFinish|CookerRepair|CookerWiringOneHand|CookerWiringTwoHand|CookerWithKitchen|ElectricianCookerInstallation|ElectricianCookerRepair]],
    alt: "SEO",
    link: "/services/seo",
  },
  {
    index: 2,
    titleTop: "[[Electrical|Wiring]] Rewire",
    titleBottom: "[[Service|Upgrade]]",
    img: [[WiringInstallation|FloorWiring|WallWiringInstall|WallWiringWebp|WiringBoxCloseup|WiringWithScrew]],
    alt: "SEO",
    link: "/services/seo",
  },
  {
    index: 3,
    titleTop: "[[Electric|Induction]] Cooker",
    titleBottom: "[[Installation|Setup]]",
    img: [[ChargerInstallation|ChargerCloseup|ChargerConversation|ElectricCharger|ElectricalChargerPng|ElectricianTestingCharger|ElectricianWithCharger|TeslaCharger|]],
    alt: "SEO",
    link: "/services/seo",
  },
  {
    index: 1,
    titleTop: "[[Electric|Underfloor]] Heating",
    titleBottom: "[[Installation|Setup]]",
    img: [[AdjustFan|FanCloseup|KitchenFan|OldFan|SmallFanNoBg|SmallFan|TableFanNoBg|TableFan]],
    alt: "SEO",
    link: "/services/seo",
  },
  {
    index: 2,
    titleTop: "[[Electrical|Vehicle]] Charger",
    titleBottom: "[[Installation|Setup]]",
    img: [[ElectricianHeatingWiring|ElectricianHeating|ElectricianInstallationWall|HeatingCloseup|HeatingFloorSetup|HeatingFloor|HeatingInstall|HeatingWiring|UnderfloorHeatingWebp]],
    alt: "SEO",
    link: "/services/seo",
  },
  {
    index: 3,
    titleTop: "[[Emergency|Urgent]] Electricians",
    titleBottom: "[[Available|On Call]]",
    img: [[ElectricianWorking|WallCloseupMiter|WallCloseup|WallMainSwitchCloseup|WallWiringService|WallWithCharger|WallWithVoltageMiter]],
    alt: "SEO",
    link: "/services/seo",
  },
];

const description =
  "[[At|Here at]] CR9, we provide a [[full range|comprehensive suite]] of reliable services to keep your [[home|property|business]] running [[safely|securely]] and efficiently. From [[quick repairs|fast fixes]] and [[emergency call-outs|urgent assistance]] to [[complete installations|full setups]] and upgrades, our expert electricians are ready to handle all your electrical needs with [[professionalism|expertise]] and care.";

const additionalContent = {
  heading:
    "[[Our|The]] Electrical Engineer Will Take [[Good|Excellent]] Care of You",
  paragraph:
    "Our engineers are [[professional|highly skilled]] and [[experienced|proficient]] in all aspects of Electrical work.",
  items: [
    "Landlord Electrical Certificates",
    "Electrical rewiring",
    "Smoke and Fire Alarms",
    "New light installations",
    "PAT Testing",
    "Periodic Electrical Inspections",
    "Electrical Fault Finding",
    "Door Entry Systems",
    "EV Car Charging Port Installations",
    "EICR Electrical Installation Condition Report",
  ],
};
---

<Section id="services">
  <div class="mt-[140px] mb-5">
    <SectionTitle sectionTitle="Services" description={description} />
    <div class="grid lg:grid-cols-2 lg:grid-rows-3 gap-10">
      {
        cards.map((card) => (
          <ServiceCard
            index={card.index}
            titleTop={card.titleTop}
            titleBottom={card.titleBottom}
            img={card.img}
            alt={card.alt}
            link={card.link}
          />
        ))
      }
    </div>
  </div>
  <Card>
    <div class="p-8 md:p-12 grid md:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="text-4xl font-bold mb-6">{additionalContent.heading}</h2>
        <p class="mb-6">{additionalContent.paragraph}</p>
        <ul class="space-y-3 mb-8">
          {
            additionalContent.items.map((item) => (
              <li class="flex items-start">
                <svg
                  class="mr-2 w-5 h-5 mt-1 text-[#f47629]"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"
                  />
                </svg>
                <span>{item}</span>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="rounded-2xl p-8">
        <Image
          src={[[DrillCloseup|DrillMachineOneHand|DrillingCloseup|ElectricBulb|ElectricWire|ElectricianBulb|ElectricianCloseup|ElectricianMonitor|IronCloseup|IronWithWire|SocketOnWall|WallWireInstall|WallWire]]}
            alt={"[[Electrician|Engineer]] [[working|operating|installing]] [[heater|heating system|electrical device]] [[image|photo|picture]]"}
          class="h-[300px] w-auto sm:h-auto sm:w-4/4 object-cover"
        />
      </div>
    </div>
  </Card>
</Section>
