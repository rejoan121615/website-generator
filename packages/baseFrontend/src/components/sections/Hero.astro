---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import HeroIlust from "./pexels-aizat-ramlan-1291546-9679179.jpg";

const heroTitle = "[[Certified|Trusted|Experienced]] Local Electrician In <br/>Croydon";
const heroDescription = 
  "Call us 24/7 for [[fast|reliable|efficient]] electrical serviceâ€”whether you need a [[general electrician|licensed professional]] or urgent emergency assistance. Our [[experienced|skilled|certified]] team is ready to handle most electrical issues [[quickly|promptly]], safely, and efficiently, ensuring your home or business is back to normal in no time."
;
const callToAction = "[[Call|Contact|Reach out to]] 020 3519 9989";
---

<Section id="home">
<div class="relative flex flex-col md:flex-row items-center" id="hero">
    <div class="order-1 md:order-1 row items-center py-5 md:w-6/12 md:pb-20 md:pt-10">
        <div class="text-left space-y-3">
            <h1 class="text-5xl font-medium leading-none md:text-6xl text-center md:text-left" set:html={heroTitle}></h1>
            <p class="mt-6 mb-8 text-lg font-normal leading-7 sm:mb-12 text-center md:text-left md:pr-12">{heroDescription}</p>
            <div class="w-full justify-center md:justify-start items-center inline-flex">
                <a href="https://github.com/manulthanura/Positivus" target="_blank" class="px-8 py-5 hover:bg-white rounded-2xl text-center text-white hover:text-black border text-xl font-normal leading-7" style="background-color: #f47629;">{callToAction}
                </a>
            </div>
        </div>
    </div>
    <div class="order-2 md:order-2 flex items-center py-5 md:w-6/12 md:pb-20 md:pt-10">
        <Image src={HeroIlust} alt="Hero Ilustration" loading="eager" style={{height:"600px"}} />
    </div>
</div>
</Section>