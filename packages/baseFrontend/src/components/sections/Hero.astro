---
import Section from "./Section.astro";
import { Image } from "astro:assets";



import certifiedElectrician from "../../assets/hero-images/certified-electrician-working.jpg";
import circuitBreakerBoxMaintenance from "../../assets/hero-images/circuit-breaker-box-maintenance.jpg";
import circuitBreakerSafety from "../../assets/hero-images/circuit-breaker-electrical-safety.jpg";
import commercialElectricalService from "../../assets/hero-images/commercial-electrical-panel-service.jpg";
import electricalCircuitInstallation from "../../assets/hero-images/electrical-circuit-breaker-installation.jpg";
import electricalMaintenanceBox from "../../assets/hero-images/electrical-maintenance-circuit-box.jpg";
import electricalPanelUpgrade from "../../assets/hero-images/electrical-panel-upgrade-service.jpg";
import electricalSafetyInspection from "../../assets/hero-images/electrical-safety-inspection-service.jpg";
import electricalSystemInspection from "../../assets/hero-images/electrical-system-inspection-work.jpg";
import electricalTechnicianTesting from "../../assets/hero-images/electrical-technician-breaker-testing.jpg";
import electricalWiringPanel from "../../assets/hero-images/electrical-wiring-breaker-panel.jpg";
import electricianWorkingPanel from "../../assets/hero-images/electrician-working-circuit-breaker-panel.jpg";
import industrialElectricalRepair from "../../assets/hero-images/industrial-electrical-repair-work.jpg";
import professionalCircuitRepair from "../../assets/hero-images/professional-circuit-breaker-repair.jpg";
import professionalElectrician from "../../assets/hero-images/professional-electrician-panel-repair.jpg";
import residentialElectricalUpgrade from "../../assets/hero-images/residential-electrical-panel-upgrade.jpg";


const heroTitle =
  "[[Highly Certified|Top-Rated|Experienced & Skilled]] Local Electrician In <br/>[[Croydon Area|[[Central London|[[North Surrey|[[West Kent|[[East Essex|South Essex]]]]]]]]]]";
const heroDescription =
  "Call us 24/7 for [[fast|reliable|efficient]] electrical serviceâ€”whether you need a [[general electrician|licensed professional]] or urgent emergency assistance. Our [[experienced|skilled|certified]] team is ready to handle most electrical issues [[quickly|promptly]], safely, and efficiently, ensuring your home or business is back to normal in no time.";
const callToAction = "[[Call|Contact|Reach out to]] {{phone}}";

// const heroImageSpintax = [[certifiedElectrician|circuitBreakerBoxMaintenance|circuitBreakerSafety|commercialElectricalService|electricalCircuitInstallation|electricalMaintenanceBox|electricalPanelUpgrade|electricalSafetyInspection|electricalSystemInspection|electricalTechnicianTesting|electricalWiringPanel|electricianWorkingPanel|industrialElectricalRepair|professionalCircuitRepair|professionalElectrician|residentialElectricalUpgrade|circuitBreakerBoxMaintenance]];
const heroImageSpintax = [[certifiedElectrician|circuitBreakerBoxMaintenance||]];


---

<Section id="home">  <div class="relative flex flex-col md:flex-row items-center" id="hero">
    <div
      class="order-1 md:order-1 row items-center py-5 md:w-6/12 md:pb-20 md:pt-10"
    >
      <div class="text-left space-y-3">
        <h1
          class="text-5xl font-medium leading-none md:text-6xl text-center md:text-left"
          set:html={heroTitle}
        />
        <p
          class="mt-6 mb-8 text-lg font-normal leading-7 sm:mb-12 text-center md:text-left md:pr-12"
        >
          {heroDescription}
        </p>
        <div
          class="w-full justify-center md:justify-start items-center inline-flex"
        >
          <a
            href="https://github.com/manulthanura/Positivus"
            target="_blank"
            class="px-8 py-5 hover:bg-white rounded-2xl text-center text-white hover:text-black border text-xl font-normal leading-7"
            style="background-color: #f47629;"
            >{callToAction}
          </a>
        </div>
      </div>
    </div>
    <div
      class="order-2 md:order-2 flex items-center py-5 md:w-6/12 md:pb-20 md:pt-10"
    >
      <Image
        src={heroImageSpintax}
        alt={"[[Certified electrician|Expert technician|Professional electrical engineer]] performing [[panel upgrade|circuit breaker maintenance|electrical safety inspection|repair work|system installation]]"}
        loading="eager"
        style={{ height: "600px" }}
      />
    </div>
  </div>
</Section>
