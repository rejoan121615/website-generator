---
import SectionTitle from "../ui/SectionTitle.astro";
import TeamCard from "../ui/TeamCard.astro";
import Section from "./Section.astro";

const description = "[[Meet|Get to Know]] the [[skilled|talented]] and [[experienced|dedicated]] team behind our [[successful|proven]] digital marketing strategies";

// Team images
import p1 from "../../assets/team/t1.png";
import p2 from "../../assets/team/t2.png";
import p3 from "../../assets/team/t3.png";
import p4 from "../../assets/team/t4.png";
import p5 from "../../assets/team/t5.png";
import p6 from "../../assets/team/t6.png";

const team = [
  {
    pic: p1,
    name: "John Smith",
    role: "CEO and Founder",
    description: "[[10+|Over 10|More than 10]] years of experience in [[digital marketing|online advertising|internet marketing]]. Expertise in [[SEO|search engine optimization|organic search]], [[PPC|pay-per-click advertising|paid search]], and [[content strategy|content planning|content development]]",
    link: "https://linkedin.com",
  },
  {
    pic: p2,
    name: "Jane Doe",
    role: "Director of Operations",
    description: "[[7+|Over 7|More than 7]] years of experience in [[project management|team leadership|operations management]]. Strong [[organizational|planning|coordination]] and [[communication|interpersonal|collaboration]] skills",
    link: "https://linkedin.com",
  },
  {
    pic: p3,
    name: "Michael Brown",
    role: "Senior SEO Specialist",
    description: "[[5+|Over 5|More than 5]] years of experience in [[SEO|search engine optimization|organic search]] and [[content creation|content development|copywriting]]. Proficient in [[keyword research|keyword analysis|search term research]] and [[on-page optimization|website optimization|site improvements]]",
    link: "https://linkedin.com",
  },
  {
    pic: p4,
    name: "Emily Johnson",
    role: "PPC Manager",
    description: "[[3+|Over 3|More than 3]] years of experience in [[paid search advertising|PPC|online ads]]. Skilled in [[campaign management|ad campaign management|advertising strategy]] and [[performance analysis|results tracking|campaign analytics]]",
    link: "https://linkedin.com",
  },
  {
    pic: p5,
    name: "Brian Williams",
    role: "Social Media Specialist",
    description: "[[4+|Over 4|More than 4]] years of experience in [[social media marketing|social media management|online engagement]]. Proficient in [[creating and scheduling content|content planning and posting|content creation and scheduling]], [[analyzing metrics|tracking analytics|monitoring performance]], and [[building engagement|growing audiences|community building]]",
    link: "https://linkedin.com",
  },
  {
    pic: p6,
    name: "Sarah Kim",
    role: "Content Creator",
    description: "[[2+|Over 2|More than 2]] years of experience in [[writing and editing|content writing and editing|copywriting]]. Skilled in [[creating compelling|crafting engaging|developing impactful]], [[SEO-optimized|search-friendly|optimized for search]] content for [[various industries|multiple sectors|different fields]]",
    link: "https://linkedin.com",
  },
];
---

<Section id="about">
  <div class="mt-[140px]">
    <SectionTitle sectionTitle="Team" description={description} />
    <div
      class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 grid-rows-2 gap-10"
    >
      {
        team.map((member, index) => (
          <TeamCard
            key={index}
            pic={member.pic}
            name={member.name}
            role={member.role}
            description={member.description}
            link={member.link}
          />
        ))
      }
    </div>
    <div class="flex justify-end mt-10">
      <button class="btn-primary">See all team</button>
    </div>
  </div>
</Section>
