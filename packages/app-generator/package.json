{
  "name": "@repo/app-generator",
  "author": "Mohd Rejoan",
  "description": "Monorepo package to generate Astro based static website",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "start": "node ./dist/index.js",
    "build": "tsc -p .",
    "compile": "tsc -p . --watch",
    "output": "nodemon ./dist/index.js"
  },
  "dependencies": {
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.2",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.1",
    "seedrandom": "^3.0.5",
    "sharp": "^0.34.4",
    "@repo/log-helper": "workspace:*"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/seedrandom": "^3.0.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "exports": {
    "./app-bundler": {
      "import": "./dist/modules/app-builder.js",
      "types": "./dist/modules/app-builder.d.ts"
    }
  }
}
