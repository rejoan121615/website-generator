{
  "name": "@repo/shared-types",
  "version": "1.0.0",
  "private": true,
  "description": "Shared TypeScript types for all packages in the monorepo",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p .",
    "compile": "tsc -p . --watch"
  },
  "devDependencies": {
    "typescript": "^5",
    "@repo/typescript-config": "workspace:*"
  }
}