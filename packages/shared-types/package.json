{
  "name": "@repo/shared-types",
  "version": "1.0.0",
  "private": true,
  "description": "Shared TypeScript types for all packages in the monorepo and handle csv type update with script",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "compile": "tsc -p . --watch",
    "update:token": "pnpm run build && node ./dist/modules/token-updater.js"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.19.24",
    "typescript": "^5"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "dependencies": {
    "csv-parse": "^6.1.0",
    "fs-extra": "^11.3.2",
    "path": "^0.12.7"
  }
}
