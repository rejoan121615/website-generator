{
  "name": "website-generator",
  "private": true,
  "scripts": {
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "compile": "turbo run compile",
    "compile:apps": "turbo run compile --filter=\"./apps/*\"",
    "compile:packages": "turbo run compile --filter=\"./packages/*\"",
    "build": "turbo build",
    "build:apps": "turbo run build --filter=\"./apps/*\"",
    "build:packages": "turbo run build --filter=\"./packages/*\"",
    "dev": "turbo dev",
    "dev:apps": "turbo run dev --filter=\"./apps/*\"",
    "dev:packages": "turbo run dev --filter=\"./packages/*\"",
    "output": "turbo output",
    "output:packages": "turbo run output --filter=\"./packages/*\"",
    "site:build": "pnpm --workspace apps/website run build",
    "site:deploy": "turbo run deploy --filter=\"./apps/*\"",
    "site:remove": "turbo run remove --filter=\"./apps/*\"",
    "site:preview": "turbo run preview --filter=\"./apps/*\"",
    "generate": "pnpm run build:packages && pnpm --filter @repo/app-generator start && pnpm install && pnpm run build:apps && pnpm run site:preview"
  },
  "devDependencies": {
    "pnpm": "^10.16.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "^24.5.0"
    }
  },
  "dependencies": {
    "wrangler": "^4.37.1"
  }
}
