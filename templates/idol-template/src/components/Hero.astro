import Savings from '../assets/savings.svg'
import Gift from '../assets/gift.svg'
---


<section class="product-hero">
    <div class="container">
        <div class="d-table">
            <div class="d-table-cell center">
                <div class="hero-copy">
                    <h1 class="h1-title">Automate your design process for creative freedom</h1>
                    <p> Lorem, ipsum dolor sit amet consectetur adipisicing elit. Repellat excepturi dignissimos exercitationem nesciunt, quo quibusdam assums? Architecto, placeat libero. </p>
                    <div class="product-cta">
                      <a href="#" class="button button-primary u-full-width">Start Trial â€” It's Free</a>
